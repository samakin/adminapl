<script type="text/javascript">
    function refreshTable(){
        $('#table').bootstrapTable('refresh');
    }

    var $table = $('#table'),
        $ok = $('#ok');

    $(function () {
        $ok.click(function () {
            $table.bootstrapTable('refresh');
        });
    });
    
    function queryParams() {
        var params = {offset: 0, limit: 10};
        $('#toolbar').find('input[name]').each(function () {
            params[$(this).attr('name')] = $(this).val();
        });
        limit = $('.page-size').html();
        if (limit){
            params.limit = limit;
        }    
        offset = $('li.page-number.active a').html();
        if (offset){
            params.offset = params.limit * (offset - 1);
        }    
        
        return params;
    }
    
    function oemFormatter(value, row){
        return [
            '<div class="pull-left">',
            '<a href="/oem/view/' + row.id + '" target="_blank">' + value + '</a>',
            '</div>'
        ].join(''); 
    }    
    
    function linkFormatter(value, row){
        return [
            '<div class="pull-left">',
            '<a href="/producer/article-view/' + row.article.id + '" target="_blank">' + row.article.code + '</a>',
            '</div>'
        ].join(''); 
    }    
    
    function unknownProducerFormatter(value){
        return [
            '<div class="pull-left">',
            '<a href="/producer/unknown-view/' + value.id + '" target="_blank">' + value.name + '</a>',
            '</div>'
        ].join('');         
    }
    
    function responseHandler(res) {
        return res;
    }    
</script>
