    $('#staffs-refresh-button').on('click', function() {
        
        var dialog = bootbox.dialog({
            message: '<p class="text-center"><i class="fa fa-spin fa-spinner"></i>Подождите, пока мы что-нибудь сделаем ...</p>',
            closeButton: false
        });
    
        $.ajax({
            type: 'GET',
            url: '/apl/get-staffs'
        })
            .done(function (data) {
                dialog.modal('hide');
                if (data == 'ok'){
                    bootbox.alert("Данные успншно обновлены.");
                }    
            })
            .fail(function () {
                dialog.modal('hide');
                bootbox.alert("Произошла ошибка при выполнении операции.");
            });        
    })
</script>