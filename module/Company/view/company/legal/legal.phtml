<script>
    $('#modal-dialog').on('show.bs.modal', function (e) {        
        var url = e.relatedTarget.value;
        if (url){
            $.ajax({
                type: 'GET',
                url: url
            })
                .done(function (data) {
                   $('#modal-content').html(data);
                })
                .fail(function () {
                    alert("Ошибка открытия формы.");
                }); 
        }
    })    
        
    $('.this-delete').on('click', function(e) {
        var url = e.currentTarget.value;
        if (url){
            if (confirm('Удалить запись?')){
                $.ajax({
                    type: 'GET',
                    url: url,
                })
                    .done(function (data) {
                        if (data == 'ok'){
                            window.location.reload();
                        } else {
                            alert("Не удалось удалить!");
                        }    
                    })
                    .fail(function (e) {
                        alert("Не удалось удалить.");

                    });
            }        
        }        
    })    
    
    
    $('#bank-account-modal').on('show.bs.modal', function (e) {        
        var url = '/legals/bank-account-form/';
        var legal_id = $(e.relatedTarget).attr('legal-id');
        if (legal_id){
            url += legal_id;
            
            var bankAccount = e.relatedTarget.value;
            if (bankAccount){
                url += '?bankAccount=' + bankAccount;
            }    
            
            $.ajax({
                type: 'GET',
                url: url
            })
                .done(function (data) {
                   $('#bank-account-modal-content').html(data);
                })
                .fail(function () {
                    alert("Ошибка открытия формы.");
                });    
            }
        })
        
    $('#contract-modal').on('show.bs.modal', function (e) {        
        var url = '/legals/contract-form/';
        var legal_id = $(e.relatedTarget).attr('legal-id');
        if (legal_id){
            url += legal_id;
            
            var contract = e.relatedTarget.value;
            if (contract){
                url += '?contract=' + contract;
            }    
            
            $.ajax({
                type: 'GET',
                url: url
            })
                .done(function (data) {
                   $('#contract-modal-content').html(data);
                })
                .fail(function (e) {
                    console.log(e);
                    alert("Ошибка открытия формы.");
                });    
            }
        })    
</script>
    